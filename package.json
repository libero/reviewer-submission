{
    "name": "reviewer-submission",
    "version": "0.1.0",
    "description": "",
    "author": "libero-npm@elifesciences.org",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "start:dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/main.ts | pino-pretty",
        "start:debug": "nodemon --config nodemon-debug.json",
        "prestart:prod": "rimraf dist && npm run build",
        "start:prod": "node dist/main.js",
        "lint": "eslint --ext .js,.ts src/",
        "prettier": "prettier --write './src/**/*.ts'",
        "test": "NEW_RELIC_NO_CONFIG_FILE=true jest ./src",
        "test:watch": "NEW_RELIC_NO_CONFIG_FILE=true jest ./src --watch",
        "test:cov": "NEW_RELIC_NO_CONFIG_FILE=true jest ./src --coverage",
        "test:debug": "NEW_RELIC_NO_CONFIG_FILE=true node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest .src/ --runInBand",
        "test:integration": "jest ./tests/",
        "merge:schemas": "ts-node tasks/merge-schemas.ts",
        "lint:schemas": "yarn merge:schemas && graphql-schema-linter lint-schemas/all.graphql -r types-are-capitalized,input-object-values-are-camel-cased,defined-types-are-used,enum-values-all-caps,fields-are-camel-cased"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/libero/reviewer-submission"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint && yarn lint:schemas",
            "pre-push": "yarn test"
        }
    },
    "dependencies": {
        "@graphql-tools/graphql-file-loader": "^6.2.6",
        "@graphql-tools/load": "^6.2.5",
        "@graphql-tools/merge": "^6.2.5",
        "@graphql-tools/schema": "^7.1.0",
        "@types/entities": "^1.1.1",
        "@types/fs-extra": "^8.1.0",
        "@types/html-pdf": "^2.2.0",
        "@types/jszip": "^3.1.7",
        "@types/pdfkit": "^0.10.5",
        "@types/ssh2-sftp-client": "^4.1.3",
        "@types/xml2json": "^0.11.0",
        "apollo-server-express": "^2.14.2",
        "aws-sdk": "^2.627.0",
        "body-parser": "^1.19.0",
        "entities": "^2.0.0",
        "express": "^4.17.1",
        "fs-extra": "^8.1.0",
        "graphql": "^14.4.2",
        "graphql-depth-limit": "^1.1.0",
        "graphql-query-complexity": "^0.4.1",
        "helmet": "^3.21.2",
        "hpp": "^0.2.3",
        "html-pdf": "^3.0.1",
        "joi": "17.2.1",
        "jsonwebtoken": "^8.5.1",
        "jszip": "^3.7.0",
        "knex": "2.4.0",
        "newrelic": "7.5.0",
        "node-fetch": "^2.6.7",
        "pdf2json": "^1.2.1",
        "pdfkit": "^0.11.0",
        "pg": "7.17.1",
        "pino": "^5.16.0",
        "rimraf": "^2.6.2",
        "ssh2-sftp-client": "^5.1.2",
        "typesafe-uuid": "^1.0.2",
        "uuid": "^3.3.2",
        "xml2js": "^0.4.23",
        "xml2json": "^0.12.0"
    },
    "devDependencies": {
        "@libero/eslint-config": "^0.0.1",
        "@types/express": "^4.17.2",
        "@types/graphql-depth-limit": "^1.1.2",
        "@types/helmet": "^0.0.45",
        "@types/hpp": "^0.2.1",
        "@types/jest": "^26.0.20",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/knex": "^0.16.1",
        "@types/node": "^10.12.18",
        "@types/node-fetch": "^2.5.4",
        "@types/pino": "^5.15.4",
        "@types/uuid": "^3.4.5",
        "@types/xml2js": "^0.4.5",
        "@typescript-eslint/eslint-plugin": "^2.8.0",
        "@typescript-eslint/parser": "^2.8.0",
        "apollo-cache-inmemory": "^1.6.5",
        "apollo-client": "^2.6.8",
        "apollo-link": "^1.2.13",
        "apollo-link-context": "^1.0.20",
        "apollo-link-error": "^1.1.12",
        "apollo-link-http": "^1.5.16",
        "axios": "^0.21.2",
        "form-data": "^3.0.0",
        "graphql-schema-linter": "^0.2.4",
        "graphql-tag": "^2.10.3",
        "husky": "^3.0.9",
        "isomorphic-fetch": "^3.0.0",
        "jest": "^26.6.3",
        "nodemon": "2.0.7",
        "pino-pretty": "^3.5.0",
        "prettier": "^1.19.1",
        "ts-jest": "26.4.4",
        "ts-node": "8.1.0",
        "typescript": "3.8.3"
    },
    "resolutions": {
        "minimist": "^1.2.0",
        "lodash": ">=4.17.19"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".test.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "engines": {
        "node": ">=12.22.0"
    }
}
